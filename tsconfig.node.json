{
"extends": "./tsconfig.json",
"compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true
},
"include": ["utils/**/*"],
"exclude": ["node_modules"]
}

